<% layout("/layouts/boilerplate") %>
<div class="show-page-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="listing-header">
                    <h1 class="listing-title"><%=listing.title%></h1>
                </div>

                <div class="listing-card">
                    <div class="card">
                        <div class="image-container">

                            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                            <div class="image-overlay"></div>
                        </div>
                        <div class="card-body">
                            <div class="listing-details">
                                <div class="detail-row">
                                    <i class="fas fa-info-circle detail-icon"></i>
                                    <span class="detail-label">Description:</span>
                                    <span class="detail-value"><%=listing.description%></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-rupee-sign detail-icon"></i>
                                    <span class="detail-label">Price:</span>

                                    <span class="detail-value price-highlight">&#8377 <%=listing.price%> per month</span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-map-marker-alt detail-icon"></i>
                                    <span class="detail-label">Location:</span>
                                    <span class="detail-value"><%=listing.location%></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-globe detail-icon"></i>
                                    <span class="detail-label">Country:</span>
                                    <span class="detail-value"><%=listing.country%></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <!-- Booking Section -->
                <div class="booking-section mt-4">
                    <div class="booking-card">
                        <div class="booking-header">
                            <div class="booking-price">
                                <span class="price-amount">₹<%= listing.price %></span>
                                <span class="price-period">per month</span>
                            </div>
                            <div class="availability-status">
                                <span class="status-badge available">
                                    <i class="fas fa-check-circle"></i>
                                    Available
                                </span>
                            </div>
                        </div>

                        <div class="booking-form-container">
                            <form action="/bookings/<%= listing._id %>" method="POST" class="booking-form" id="bookingForm">
                                <div class="booking-dates">
                                    <div class="date-input-group">
                                        <label for="checkIn" class="form-label">
                                            <i class="fas fa-calendar-check"></i>
                                            Check-in
                                        </label>
                                        <input type="date" id="checkIn" name="checkIn" class="form-control" required>
                                    </div>
                                    <div class="date-input-group">
                                        <label for="checkOut" class="form-label">
                                            <i class="fas fa-calendar-times"></i>
                                            Check-out
                                        </label>
                                        <input type="date" id="checkOut" name="checkOut" class="form-control" required>
                                    </div>
                                </div>

                                <div class="guests-input">
                                    <label for="guests" class="form-label">
                                        <i class="fas fa-users"></i>
                                        Guests
                                    </label>
                                    <select id="guests" name="guests" class="form-select" required>
                                        <option value="">Select guests</option>
                                        <option value="1">1 Guest</option>
                                        <option value="2">2 Guests</option>
                                        <option value="3">3 Guests</option>
                                        <option value="4">4 Guests</option>
                                        <option value="5">5+ Guests</option>
                                    </select>
                                </div>

                                <div class="booking-summary" id="bookingSummary" style="display: none;">
                                    <div class="summary-row">
                                        <span>Duration:</span>
                                        <span id="nightsCount">0 nights</span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Total Price:</span>
                                        <span id="totalPrice">₹0</span>
                                    </div>
                                </div>

                                <button type="submit" class="btn booking-btn" id="bookingBtn" disabled>
                                    <i class="fas fa-calendar-check"></i>
                                    Book Now
                                </button>
                            </form>


                            <% if(currUser && currUser._id && listing.owner && currUser._id.equals(listing.owner._id)) { %>
                                <div class="owner-notice">
                                    <i class="fas fa-info-circle"></i>
                                    You are the owner of this property
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

<%if(currUser && currUser._id && listing.owner && listing.owner._id && currUser._id.equals(listing.owner._id)){%>
<div class="buttonsid">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark btn-id">Edit</a>
    <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST"><button class="btn btn-dark btn-id_a">Delete</button></form>
</div>
<%}%>
<hr>
                    <div class="review-form-container">
                        <div class="review-form">
                            <h4 class="form-title">
                                <i class="fas fa-star"></i> Leave a Review
                            </h4>
                            <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
                                <div class="mb-3">
                                    <label for="rating" class="form-label rating-label">
                                        <i class="fas fa-star-half-alt"></i> Rating
                                    </label>
                                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
                                    <div class="rating-display">
                                        <span id="rating-value">3</span>/5 stars
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="comment" class="form-label comment-label">
                                        <i class="fas fa-comment"></i> Your Review
                                    </label>
                                    <textarea name="review[comment]" id="comment" class="form-control review-textarea" rows="4" placeholder="Share your experience..." required></textarea>
                                </div>
                                <button class="btn submit-review-btn">
                                    <i class="fas fa-paper-plane"></i> Submit Review
                                </button>
                            </form>
                        </div>
                    </div>

    <%if(listing.reviews.length > 0){%>
    <div class="row reviews-section">
        <div class="col-8 offset-3 mb-3">
            <h4>All Reviews (<%=listing.reviews.length%>)</h4>
            <%for(let review of listing.reviews){%>
                <div class="review-card">
                    <div class="card-body">
                        <div class="review-header">
                            <div class="review-avatar">
                                <%=review.author ? review.author.username.charAt(0).toUpperCase() : 'A'%>
                            </div>
                            <div>
                                <h5 class="review-author">@<%=review.author ? review.author.username : 'Anonymous'%></h5>
                                <div class="review-rating">
                                    <div class="stars">
                                        <%for(let i=1; i<=5; i++){%>
                                            <%if(i <= review.rating){%>
                                                <i class="fas fa-star text-warning"></i>
                                            <%}else{%>
                                                <i class="far fa-star text-warning"></i>
                                            <%}%>
                                        <%}%>
                                    </div>
                                    <span class="rating-text">(<%=review.rating%>/5)</span>
                                </div>
                            </div>
                        </div>
                        <p class="review-comment"><%=review.comment%></p>
                        <%if(currUser && review.author && currUser._id.equals(review.author._id)){%>
                            <div class="review-actions">
                                <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                                    <button class="review-delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this review?')">
                                        <i class="fas fa-trash"></i> Delete Review
                                    </button>
                                </form>
                            </div>
                        <%}%>
                    </div>
                </div>
            <%}%>
        </div>
    </div>
    <%}%>

    <br><br><br>
</div>


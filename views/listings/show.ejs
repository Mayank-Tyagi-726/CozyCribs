<% layout("/layouts/boilerplate") %>
<div class="show-page-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="listing-header">
                    <h1 class="listing-title"><%=listing.title%></h1>
                </div>

                <div class="listing-card">
                    <div class="card">
                        <div class="image-container">
                            <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
                            <div class="image-overlay"></div>
                        </div>
                        <div class="card-body">
                            <div class="listing-details">
                                <div class="detail-row">
                                    <i class="fas fa-info-circle detail-icon"></i>
                                    <span class="detail-label">Description:</span>
                                    <span class="detail-value"><%=listing.description%></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-rupee-sign detail-icon"></i>
                                    <span class="detail-label">Price:</span>
                                    <span class="detail-value price-highlight">&#8377 <%=listing.price%> per night</span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-map-marker-alt detail-icon"></i>
                                    <span class="detail-label">Location:</span>
                                    <span class="detail-value"><%=listing.location%></span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-globe detail-icon"></i>
                                    <span class="detail-label">Country:</span>
                                    <span class="detail-value"><%=listing.country%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

   
   
<%if(currUser && currUser._id && listing.owner && listing.owner._id && currUser._id.equals(listing.owner._id)){%>
</div>
 <div class="buttonsid ">
         <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark btn-id">Edit</a>


    
        <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST"><button class="btn btn-dark btn-id_a">Delete</button></form>
    </div>  
<%}%>
<hr>
                    <div class="review-form-container">
                        <div class="review-form">
                            <h4 class="form-title">
                                <i class="fas fa-star"></i> Leave a Review
                            </h4>
                            <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
                                <div class="mb-3">
                                    <label for="rating" class="form-label rating-label">
                                        <i class="fas fa-star-half-alt"></i> Rating
                                    </label>
                                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
                                    <div class="rating-display">
                                        <span id="rating-value">3</span>/5 stars
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="comment" class="form-label comment-label">
                                        <i class="fas fa-comment"></i> Your Review
                                    </label>
                                    <textarea name="review[comment]" id="comment" class="form-control review-textarea" rows="4" placeholder="Share your experience..." required></textarea>
                                </div>
                                <button class="btn submit-review-btn">
                                    <i class="fas fa-paper-plane"></i> Submit Review
                                </button>
                            </form>
                        </div>
                    </div>

    <%if(listing.reviews.length > 0){%>
    <div class="row reviews-section">
        <div class="col-8 offset-3 mb-3">
            <h4>All Reviews (<%=listing.reviews.length%>)</h4>
            <%for(let review of listing.reviews){%>
                <div class="review-card">
                    <div class="card-body">
                        <div class="review-header">
                            <div class="review-avatar">
                                <%=review.author ? review.author.username.charAt(0).toUpperCase() : 'A'%>
                            </div>
                            <div>
                                <h5 class="review-author">@<%=review.author ? review.author.username : 'Anonymous'%></h5>
                                <div class="review-rating">
                                    <div class="stars">
                                        <%for(let i=1; i<=5; i++){%>
                                            <%if(i <= review.rating){%>
                                                <i class="fas fa-star text-warning"></i>
                                            <%}else{%>
                                                <i class="far fa-star text-warning"></i>
                                            <%}%>
                                        <%}%>
                                    </div>
                                    <span class="rating-text">(<%=review.rating%>/5)</span>
                                </div>
                            </div>
                        </div>
                        <p class="review-comment"><%=review.comment%></p>
                        <%if(currUser && review.author && currUser._id.equals(review.author._id)){%>
                            <div class="review-actions">
                                <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                                    <button class="review-delete-btn" type="submit" onclick="return confirm('Are you sure you want to delete this review?')">
                                        <i class="fas fa-trash"></i> Delete Review
                                    </button>
                                </form>
                            </div>
                        <%}%>
                    </div>
                </div>
            <%}%>
        </div>
    </div>
    <%}%>

    <br><br><br>
</div>



<% layout("/layouts/boilerplate") %>

<body>
    <!-- Enhanced Listings Header -->
    <div class="listings-header">
        <div class="container">
            <div class="header-content">
                <div class="header-title">
                    <i class="fas fa-home header-icon"></i>
                    <div class="title-text">
                        <h1 class="listings-title">All Listings</h1>
                        <p class="listings-subtitle">Discover your perfect home away from home</p>
                    </div>
                </div>
                <div class="header-stats">
                    <span class="listing-count">
                        <i class="fas fa-building"></i>
                        <span id="current-count"><%= allListings.length %></span> Properties
                    </span>
                </div>
            </div>
        </div>
    </div>


    <!-- Filter Bar -->
    <div class="filter-section">
        <div class="container">
            <!-- Mobile Filter Toggle Button -->
            <button class="filter-toggle" id="filterToggle">
                <i class="fas fa-filter"></i>
                <span>Filter Properties</span>
                <i class="fas fa-chevron-down"></i>
            </button>
            
            <!-- Collapsible Filter Content -->
            <div class="filter-content" id="filterContent">
                <!-- Desktop/Tablet Filter Bar -->
                <div class="filter-bar">
                    <div class="filter-group">
                        <label for="searchFilter" class="filter-label">
                            <i class="fas fa-search"></i>
                            Search
                        </label>
                        <input type="text" id="searchFilter" class="filter-input" placeholder="Search by title or description...">
                    </div>
                    
                    <div class="filter-group">
                        <label for="locationFilter" class="filter-label">
                            <i class="fas fa-map-marker-alt"></i>
                            Location
                        </label>
                        <select id="locationFilter" class="filter-select">
                            <option value="">All Locations</option>
                            <% 
                            const locations = [...new Set(allListings.map(listing => listing.location).filter(Boolean))];
                            locations.forEach(location => { %>
                                <option value="<%= location %>"><%= location %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="countryFilter" class="filter-label">
                            <i class="fas fa-globe"></i>
                            Country
                        </label>
                        <select id="countryFilter" class="filter-select">
                            <option value="">All Countries</option>
                            <% 
                            const countries = [...new Set(allListings.map(listing => listing.country).filter(Boolean))];
                            countries.forEach(country => { %>
                                <option value="<%= country %>"><%= country %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="priceFilter" class="filter-label">
                            <i class="fas fa-rupee-sign"></i>
                            Max Price
                        </label>
                        <input type="range" id="priceFilter" class="filter-range" 
                               min="0" max="<%= Math.max(...allListings.map(l => l.price || 0)) %>" 
                               value="<%= Math.max(...allListings.map(l => l.price || 0)) %>">
                        <span class="price-value" id="priceValue">₹<%= Math.max(...allListings.map(l => l.price || 0)).toLocaleString() %></span>
                    </div>
                    
                    <div class="filter-actions">
                        <button id="resetFilters" class="reset-btn">
                            <i class="fas fa-undo"></i>
                            Reset
                        </button>
                    </div>
                </div>
                
                <!-- Mobile Compact Filter Grid -->
                <div class="mobile-filters-grid">
                    <div class="filter-group">
                        <label for="searchFilterMobile" class="filter-label">
                            <i class="fas fa-search"></i>
                            Search
                        </label>
                        <input type="text" id="searchFilterMobile" class="filter-input" placeholder="Search by title or description...">
                    </div>
                    
                    <div class="filter-group">
                        <label for="locationFilterMobile" class="filter-label">
                            <i class="fas fa-map-marker-alt"></i>
                            Location
                        </label>
                        <select id="locationFilterMobile" class="filter-select">
                            <option value="">All Locations</option>
                            <% 
                            const locationsMobile = [...new Set(allListings.map(listing => listing.location).filter(Boolean))];
                            locationsMobile.forEach(location => { %>
                                <option value="<%= location %>"><%= location %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="countryFilterMobile" class="filter-label">
                            <i class="fas fa-globe"></i>
                            Country
                        </label>
                        <select id="countryFilterMobile" class="filter-select">
                            <option value="">All Countries</option>
                            <% 
                            const countriesMobile = [...new Set(allListings.map(listing => listing.country).filter(Boolean))];
                            countriesMobile.forEach(country => { %>
                                <option value="<%= country %>"><%= country %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="priceFilterMobile" class="filter-label">
                            <i class="fas fa-rupee-sign"></i>
                            Max Price
                        </label>
                        <input type="range" id="priceFilterMobile" class="filter-range" 
                               min="0" max="<%= Math.max(...allListings.map(l => l.price || 0)) %>" 
                               value="<%= Math.max(...allListings.map(l => l.price || 0)) %>">
                        <span class="price-value" id="priceValueMobile">₹<%= Math.max(...allListings.map(l => l.price || 0)).toLocaleString() %></span>
                    </div>
                    
                    <div class="filter-group">
                        <label class="filter-label">
                            <i class="fas fa-info-circle"></i>
                            Tips
                        </label>
                        <div style="font-size: 0.8rem; color: #666; text-align: center; padding: 0.5rem;">
                            Use filters to find your perfect property
                        </div>
                    </div>
                    
                    <div class="filter-actions">
                        <button id="resetFiltersMobile" class="reset-btn">
                            <i class="fas fa-undo"></i>
                            Reset All
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Listings Grid -->
    <div class="container">
        <div class="listings-container">
            <div id="listingsGrid" class="row row-cols-lg-4 row-cols-md-2">
                <%for(listing of allListings){%>
                    <div class="listing-item" 
                         data-title="<%= listing.title.toLowerCase() %>" 
                         data-description="<%= listing.description ? listing.description.toLowerCase() : '' %>"
                         data-location="<%= listing.location || '' %>"
                         data-country="<%= listing.country || '' %>"
                         data-price="<%= listing.price || 0 %>">
                        <a href="/listings/<%=listing._id%>" class="listing-link">
                            <div class="card listing-card">
                                <div class="card-img-wrapper">
                                    <img src="<%= listing.image%>" class="card-img-top" alt="listing_image">
                                    <div class="card-img-overlay"></div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title"><%= listing.title %></h5>
                                    <p class="card-text">
                                        <% if (listing.location) { %>
                                            <i class="fas fa-map-marker-alt text-muted"></i>
                                            <%= listing.location %><br>
                                        <% } %>
                                        <span class="price-section">
                                            <i class="fas fa-rupee-sign"></i>
                                            <span class="price"><%= listing.price ? listing.price.toLocaleString() : '0' %></span>
                                            <span class="per-night">/month</span>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                <%}%>
            </div>
            
            <!-- No Results Message -->
            <div id="noResults" class="no-results" style="display: none;">
                <div class="no-results-content">
                    <i class="fas fa-search"></i>
                    <h3>No listings found</h3>
                    <p>Try adjusting your filters to see more results</p>
                </div>
            </div>
        </div>
    </div>
</body>


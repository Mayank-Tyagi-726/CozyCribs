
<% layout("/layouts/boilerplate") %>

<body>
    <!-- Enhanced Listings Header -->
    <div class="listings-header">
        <div class="container">
            <div class="header-content">
                <div class="header-title">
                    <i class="fas fa-home header-icon"></i>
                    <div class="title-text">
                        <h1 class="listings-title">All Listings</h1>
                        <p class="listings-subtitle">Discover your perfect home away from home</p>
                    </div>
                </div>


                <div class="header-stats">
                    <span class="listing-count">
                        <i class="fas fa-building"></i>
                        <span id="current-count"><%= allListings.length %></span> Properties
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="container">
            <div class="filter-content">
                <div class="filter-bar">
                    <!-- Desktop Search -->
                    <div class="filter-group desktop-search">
                        <label class="filter-label" for="desktopSearch">
                            <i class="fas fa-search"></i>
                            Search
                        </label>
                        <input type="text" id="desktopSearch" class="filter-input" placeholder="Search by title, location...">
                    </div>
                    
                    <!-- Location Filter -->
                    <div class="filter-group">
                        <label class="filter-label" for="locationFilter">
                            <i class="fas fa-map-marker-alt"></i>
                            Location
                        </label>
                        <select id="locationFilter" class="filter-select">
                            <option value="">All Locations</option>
                            <% 
                            const locations = [...new Set(allListings.map(listing => listing.location).filter(Boolean))];
                            locations.forEach(location => { %>
                                <option value="<%= location %>"><%= location %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <!-- Country Filter -->
                    <div class="filter-group">
                        <label class="filter-label" for="countryFilter">
                            <i class="fas fa-globe"></i>
                            Country
                        </label>
                        <select id="countryFilter" class="filter-select">
                            <option value="">All Countries</option>
                            <option value="India">India</option>
                            <option value="USA">USA</option>
                            <option value="UK">UK</option>
                            <option value="Canada">Canada</option>
                            <option value="Australia">Australia</option>
                            <option value="Germany">Germany</option>
                            <option value="France">France</option>
                            <option value="Italy">Italy</option>
                            <option value="Spain">Spain</option>
                            <option value="Japan">Japan</option>
                        </select>
                    </div>
                    
                    <!-- Price Range -->
                    <div class="filter-group">
                        <label class="filter-label" for="priceRange">
                            <i class="fas fa-rupee-sign"></i>
                            Max Price/Night
                        </label>
                        <input type="range" id="priceRange" class="filter-range" min="0" max="10000" step="500" value="10000">
                        <div class="price-value" id="priceValue">₹10,000+</div>
                    </div>
                    
                    <!-- Reset Button -->
                    <div class="filter-actions">
                        <button class="reset-btn" id="resetFilters">
                            <i class="fas fa-undo"></i>
                            Reset
                        </button>
                    </div>
                </div>
                
                
                <!-- Mobile Filter Toggle -->
                <button class="filter-toggle" id="filterToggle">
                    <i class="fas fa-filter"></i>
                    More Filters
                    <i class="fas fa-chevron-down"></i>
                </button>
                
                <!-- Mobile Filter Content -->
                <div class="filter-content mobile-filters" id="mobileFilters" style="display: none;">
                    <div class="mobile-filters-grid">
                        <div class="filter-group">
                            <label class="filter-label" for="mobileLocation">
                                <i class="fas fa-map-marker-alt"></i>
                                Location
                            </label>
                            <select id="mobileLocation" class="filter-select">
                                <option value="">All Locations</option>
                                <% 
                                const mobileLocations = [...new Set(allListings.map(listing => listing.location).filter(Boolean))];
                                mobileLocations.forEach(location => { %>
                                    <option value="<%= location %>"><%= location %></option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label class="filter-label" for="mobileCountry">
                                <i class="fas fa-globe"></i>
                                Country
                            </label>
                            <select id="mobileCountry" class="filter-select">
                                <option value="">All Countries</option>
                                <option value="India">India</option>
                                <option value="USA">USA</option>
                                <option value="UK">UK</option>
                                <option value="Canada">Canada</option>
                                <option value="Australia">Australia</option>
                                <option value="Germany">Germany</option>
                                <option value="France">France</option>
                                <option value="Italy">Italy</option>
                                <option value="Spain">Spain</option>
                                <option value="Japan">Japan</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label class="filter-label" for="mobilePrice">
                                <i class="fas fa-rupee-sign"></i>
                                Max Price/Night
                            </label>
                            <input type="range" id="mobilePrice" class="filter-range" min="0" max="10000" step="500" value="10000">
                            <div class="price-value" id="mobilePriceValue">₹10,000+</div>
                        </div>
                        
                        <div class="filter-group">
                            <label class="filter-label" for="mobileBedrooms">
                                <i class="fas fa-bed"></i>
                                Bedrooms
                            </label>
                            <select id="mobileBedrooms" class="filter-select">
                                <option value="">Any</option>
                                <option value="1">1+</option>
                                <option value="2">2+</option>
                                <option value="3">3+</option>
                                <option value="4">4+</option>
                                <option value="5">5+</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label class="filter-label" for="mobileGuests">
                                <i class="fas fa-users"></i>
                                Guests
                            </label>
                            <select id="mobileGuests" class="filter-select">
                                <option value="">Any</option>
                                <option value="1">1+</option>
                                <option value="2">2+</option>
                                <option value="4">4+</option>
                                <option value="6">6+</option>
                                <option value="8">8+</option>
                                <option value="10">10+</option>
                            </select>
                        </div>
                        
                        <div class="filter-actions">
                            <button class="reset-btn" id="mobileResetFilters">
                                <i class="fas fa-undo"></i>
                                Reset
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Listings Grid -->
    <div class="container">
        <div class="listings-container">
            <div id="listingsGrid" class="row row-cols-lg-4 row-cols-md-2">
                <%for(listing of allListings){%>

                    <div class="listing-item">
                        <a href="/listings/<%=listing._id%>" class="listing-link">
                            <div class="card listing-card">
                                <div class="card-img-wrapper">
                                    <img src="<%= listing.image%>" class="card-img-top" alt="listing_image">
                                    <div class="card-img-overlay"></div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title"><%= listing.title %></h5>
                                    <p class="card-text">
                                        <% if (listing.location) { %>
                                            <i class="fas fa-map-marker-alt text-muted"></i>
                                            <%= listing.location %><br>
                                        <% } %>

                                        <span class="price-section">
                                            <i class="fas fa-rupee-sign"></i>
                                            <span class="price"><%= listing.price ? Math.round(listing.price / 30).toLocaleString() : '0' %></span>
                                            <span class="per-night">/night</span>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                <%}%>
            </div>
            
            <!-- No Results Message -->
            <div id="noResults" class="no-results" style="display: none;">
                <div class="no-results-content">
                    <i class="fas fa-search"></i>
                    <h3>No listings found</h3>
                    <p>Try adjusting your filters to see more results</p>
                </div>
            </div>
        </div>
    </div>
</body>

